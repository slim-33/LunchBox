{
    "expo": {
      "name": "CrispIt",
      "slug": "crispit",
      "version": "1.0.0",
      "orientation": "portrait",
      "icon": "./assets/HTC-LOGO.png",
      "userInterfaceStyle": "dark",
      "splash": {
        "image": "./assets/HTC-LOGO.png",
        "resizeMode": "contain",
        "backgroundColor": "#16302A"
      },
      "assetBundlePatterns": [
        "**/*"
      ],
      "ios": {
        "supportsTablet": true,
        "bundleIdentifier": "com.crispit.app",
        "infoPlist": {
          "NSCameraUsageDescription": "CrispIt needs camera access to scan and identify produce.",
          "NSPhotoLibraryUsageDescription": "CrispIt needs photo library access to analyze produce images."
        }
      },
      "android": {
        "adaptiveIcon": {
          "foregroundImage": "./assets/HTC-LOGO.png",
          "backgroundColor": "#16302A"
        },
        "package": "com.crispit.app",
        "permissions": [
          "CAMERA",
          "READ_MEDIA_IMAGES"
        ]
      },
      "web": {
        "favicon": "./assets/favicon.png"
      },
      "plugins": [
        [
          "expo-camera",
          {
            "cameraPermission": "Allow CrispIt to scan produce for freshness assessment.",
            "microphonePermission": false
          }
        ],
        [
          "expo-image-picker",
          {
            "photosPermission": "Allow CrispIt to access your photos."
          }
        ]
      ]
    }
  }